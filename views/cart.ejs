<style>
body {
  background-image: url('img/library.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: 100% 100%;
}
</style>
<body>
	<div class="container login-container">
        <div class="row">
            <div class="col-md-6 login-form-1">
                <h3>Shopping Cart</h3>
                
                    <ul id="service">
                        <% rows.forEach((writer)=>{ %>
                          <form action="remove/<%= writer.id %>" method="POST">
                        <li> id:<%=writer.id %> &nbsp;<%=writer.Book_name %>    &nbsp;Price: <%=writer.price %> &nbsp;<br><button type="submit" class="button0">Remove</button></li>
                          </form>
                        <%});%>
                        <li> Total: <%=total %></li>
                    </ul>
                    <form action="pay" method="POST">
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Checkout" />
                </div>
                

                    </form>
                <
                <div class="form-group" >

                    <a href="user" class="btnForgetPwd" >Go Back to Home</a>
                </div>

            </div>
        </div>
    </div>
</div>
</body>
</html>